# SolarCommand Environment Variables
# Copy this to .env and fill in real values

# Database
DATABASE_URL=postgresql+asyncpg://solar:solar@localhost:5432/solarcommand
DATABASE_URL_SYNC=postgresql://solar:solar@localhost:5432/solarcommand

# Redis
REDIS_URL=redis://localhost:6379/0

# Twilio (leave blank for MVP simulation mode)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SendGrid (leave blank for MVP simulation mode)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=solar@example.com

# AI Provider — Anthropic Claude (primary, leave blank for deterministic fallback)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
AI_TEMPERATURE=0.2
AI_MAX_TOKENS=800
AI_PROMPT_VERSION=v1
AI_ALLOW_AUTO_ACTIONS=false
AI_COST_TRACKING=true

# Voice Provider (twilio, vapi, retell)
VOICE_PROVIDER=twilio
VOICE_CALL_COST_USD=0.80
VAPI_API_KEY=
VAPI_PHONE_NUMBER_ID=
VAPI_MODEL=claude-sonnet-4-5-20250929
RETELL_API_KEY=

# Enrichment Providers
PDL_API_KEY=
MELISSA_API_KEY=
TRACERFY_API_KEY=
ENRICHMENT_CONFIDENCE_MIN=0.5

# Legacy OpenAI fallback (optional)
OPENAI_API_KEY=
AI_MODEL=gpt-4o-mini
AI_BASE_URL=https://api.openai.com/v1

# SMS AI Agent
SMS_AUTO_REPLY_ENABLED=false

# Twilio webhook signature verification (required in production, blank skips in DEBUG mode)
TWILIO_WEBHOOK_SECRET=

# Webhook API key — shared secret for non-Twilio webhook endpoints (required in production)
WEBHOOK_API_KEY=

# Webhook rate limiting (requests per minute)
WEBHOOK_RATE_LIMIT=60

# CORS — comma-separated allowed origins
CORS_ORIGINS=http://localhost:3000

# Outreach windows (Eastern Time hours, 24h format)
CALL_START_HOUR=9
CALL_END_HOUR=20
SMS_START_HOUR=9
SMS_END_HOUR=21

# JWT Auth
JWT_SECRET=change-me-in-production-use-openssl-rand-hex-32
JWT_EXPIRE_MINUTES=480

# App
DEBUG=true
